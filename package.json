{
  "name": "fivem-attributes",
  "description": "Character attributes for FiveM.",
  "author": "jacobbernoulli",
  "version": "0.32.4",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "connect": "npx prisma db pull && npx prisma generate",
    "build": "node scripts/build.js",
    "watch": "node scripts/build.js --watch",
    "ci": "pnpm run connect && pnpm run build",
    "format": "pnpm biome format --write",
    "lint": "pnpm biome lint --write"
  },
  "prisma": {
    "schema": "./schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacobbernoulli/fivem-attributes.git"
  },
  "bugs": "https://github.com/jacobbernoulli/fivem-attributes/issues",
  "dependencies": {
    "@nativewrappers/fivem": "^0.0.90",
    "@nativewrappers/server": "^0.0.90",
    "@overextended/ox_core": "^1.5.1",
    "@overextended/ox_lib": "latest",
    "@prisma/client": "^5.21.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@citizenfx/client": "latest",
    "@citizenfx/server": "latest",
    "@types/node": "^22.13.11",
    "esbuild": "^0.25.1",
    "prisma": "^6.5.0"
  },
  "engines": {
    "node": ">=22.9.0"
  }
}
